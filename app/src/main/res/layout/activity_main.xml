<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kimhyobin.menubar.MainActivity">

    <kr.co.ucsit.csmenulibrary.CSMenuView
        android:layout_weight="0"
        android:id="@+id/csMenu"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:topBarHeight="60dp"
        app:menuTitle="@string/app_name"
        app:menuTitleFontSize="20dp"
        app:menuTitleTextColor="@color/colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>
